<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_shade_3"
    android:orientation="vertical"
    tools:context=".ui.calculator.CalculatorFragment2">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/idOutPut"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/black_shade_3"
        android:gravity="bottom"
        android:maxLines="1"
        android:padding="10dp"
        android:paddingTop="30dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="15sp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/idInput"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/black_shade_3"
        android:gravity="bottom"
        android:maxLines="1"
        android:padding="10dp"
        android:text=""
        android:textAlignment="viewEnd"
        android:textColor="#fff"
        android:textSize="50sp"
        tools:ignore="RtlCompat" />


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blac_shade_1"
        app:cardCornerRadius="6dp"
        app:cardElevation="2dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:background="@color/blac_shade_1"
            android:orientation="vertical">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/bsin"
                        style="@style/CalculateButtonStyle"
                        android:text="sin" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/bcos"
                        style="@style/CalculateButtonStyle"
                        android:text="cos" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btan"
                        style="@style/CalculateButtonStyle"
                        android:text="tan" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/blog"
                        style="@style/CalculateButtonStyle"
                        android:text="log" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/bln"
                        style="@style/CalculateButtonStyle"
                        android:text="ln" />
                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/bfact"
                        style="@style/CalculateButtonStyle"
                        android:text="x!" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/bsquare"
                        style="@style/CalculateButtonStyle"
                        android:text="x²" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/bsqrt"
                        style="@style/CalculateButtonStyle"
                        android:text="√" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/binv"
                        style="@style/CalculateButtonStyle"
                        android:text="1/x" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/bdiv"
                        style="@style/CalculateButtonStyle"
                        android:text="÷" />
                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/bac"
                        style="@style/CalculateButtonStyle"
                        android:text="AC" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/bc"
                        style="@style/CalculateButtonStyle"
                        android:text="C" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/bbrac1"
                        style="@style/CalculateButtonStyle"
                        android:text="(" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/bbrac2"
                        style="@style/CalculateButtonStyle"
                        android:text=")" />
                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/b7"
                        style="@style/CalculateButtonStyle"
                        android:text="7" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/b8"
                        style="@style/CalculateButtonStyle"
                        android:text="8" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/b9"
                        style="@style/CalculateButtonStyle"
                        android:text="9" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/bmul"
                        style="@style/CalculateButtonStyle"
                        android:text="x" />
                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/b4"
                        style="@style/CalculateButtonStyle"
                        android:text="4" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/b5"
                        style="@style/CalculateButtonStyle"
                        android:text="5" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/b6"
                        style="@style/CalculateButtonStyle"
                        android:text="6" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/bminus"
                        style="@style/CalculateButtonStyle"
                        android:text="-" />
                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/b1"
                        style="@style/CalculateButtonStyle"
                        android:text="1" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/b2"
                        style="@style/CalculateButtonStyle"
                        android:text="2" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/b3"
                        style="@style/CalculateButtonStyle"
                        android:text="3" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/bplus"
                        style="@style/CalculateButtonStyle"
                        android:text="+" />
                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/bpi"
                        style="@style/CalculateButtonStyle"
                        android:text="π" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/b0"
                        style="@style/CalculateButtonStyle"
                        android:text="0" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/bdot"
                        style="@style/CalculateButtonStyle"
                        android:text="." />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/bequal"
                        style="@style/CalculateButtonStyle"
                        android:text="=" />
                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </com.google.android.material.card.MaterialCardView>



</androidx.appcompat.widget.LinearLayoutCompat>